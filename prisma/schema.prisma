// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @unique @default(autoincrement())
  email      String      @unique
  password   String
  username   String
  fullname   String
  workSpaces WorkSpace[]
}

model WorkSpace {
  id          Int     @id @default(autoincrement())
  name        String
  type        String
  description String
  users       User[]
  boards      Board[]
}

model Board {
  id          Int       @id @unique @default(autoincrement())
  title       String
  description String
  columns     Column[]
  image       String?
  workSpace   WorkSpace @relation(fields: [workSpaceId], references: [id])
  workSpaceId Int
}

model Column {
  id      Int    @id @unique @default(autoincrement())
  title   String
  board   Board  @relation(fields: [boardId], references: [id])
  boardId Int
  cards   Card[]
}

model Card {
  id          Int      @id @unique @default(autoincrement())
  title       String
  description String
  date        DateTime
  label       Label[]
  column      Column   @relation(fields: [columnId], references: [id])
  columnId    Int
}

model Label {
  id    Int    @id @unique @default(autoincrement())
  title String
  color String
  cards Card[]
}
