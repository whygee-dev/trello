// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String      @id @unique @default(cuid())
  email           String      @unique
  password        String
  username        String
  fullname        String
  workSpaces      WorkSpace[]
  ownedWorkspaces WorkSpace[] @relation("owner")
}

model WorkSpace {
  id          String  @id @default(cuid())
  title       String
  type        String
  description String?
  users       User[]
  owner       User    @relation("owner", fields: [ownerId], references: [id])
  ownerId     String
  boards      Board[]
}

model Board {
  id          String    @id @unique @default(cuid())
  title       String
  description String?
  image       String?
  workSpace   WorkSpace @relation(fields: [workSpaceId], references: [id], onDelete: Cascade)
  workSpaceId String
  columns     Column[]
  labels      Label[]
}

model Column {
  id      String @id @unique @default(cuid())
  title   String
  yIndex  Int
  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId String
  cards   Card[]
}

model Card {
  id          String    @id @unique @default(cuid())
  title       String
  description String?
  date        DateTime? @default(now())
  xIndex      Int
  labels      Label[]
  column      Column    @relation(fields: [columnId], references: [id], onDelete: Cascade)
  columnId    String
}

model Label {
  id      String @id @unique @default(cuid())
  title   String
  color   String
  card    Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId String
  cards   Card[]
}
